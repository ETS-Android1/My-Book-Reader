<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AddBook">

    <RelativeLayout
        android:id="@+id/rll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Title:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/edt_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/tv_title"/>

    </RelativeLayout>

    //Author:
    <RelativeLayout
        android:id="@+id/rll_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rll_title"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Author:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/edt_author"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/tv_author"/>

    </RelativeLayout>

    //Cover:
    <RelativeLayout
        android:id="@+id/rll_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rll_author"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_cover"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Cover:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_uriCover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cover"
            android:layout_marginTop="20dp"
            android:text="uri"
            android:textColor="#FF5722"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_addCover"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/tv_cover"
            android:text="LINK"/>

    </RelativeLayout>

    //File:

    <RelativeLayout
        android:id="@+id/rll_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rll_cover"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/tv_file"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="File:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_uriPDF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_file"
            android:layout_marginTop="20dp"
            android:text="uri"
            android:textColor="#FF5722"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_addFile"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/tv_file"
            android:text="LINK"/>

    </RelativeLayout>

    <Button
        android:id="@+id/f_btn_addBook"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/rll_file"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="100dp"
        android:text="ADD" />

    <Button
        android:id="@+id/f_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/rll_file"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="254dp"
        android:layout_marginLeft="254dp"
        android:layout_marginTop="100dp"
        android:text="CANCEL" />

</RelativeLayout>